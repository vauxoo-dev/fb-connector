<?xml version="1.0"?>
<openerp>
    <data noupdate="1">
        <record model="ir.ui.view" id="product_normal_view_form_inherit">
            <field name="name">product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page[@string='Information']" position="after">
                    <page string="Historical Cost Price">
                        <group colspan="2" col="2">
                            <separator string="Historical Costs" colspan="2"/>
                            <field name="cost_historical" colspan="2"/>
                            <field name="cost_historical_ids" nolabel="1" colspan="2">
                                <form string="Historical Cost">
                                    <field name="name"/>
                                    <field name="price"/>
                                    <field name="product_uom"/>
                                </form>
                                <tree string="Historical Cost">
                                    <field name="name"/>
                                    <field name="price"/>
                                    <field name="product_uom"/>
                                </tree>
                            </field>
                        </group>
                        <group colspan="2" col="2">
                            <separator string="Historical Prices" nolabel="1" colspan="2"/>
                            <field name="list_price_historical"   colspan="2"/>
                            <newline/>
                            <field name="list_price_historical_ids" nolabel="1" colspan="2">
                                <form string="Historical List Price">
                                    <field name="name"/>
                                    <field name="price"/>
                                    <field name="product_uom"/>
                                </form>
                                <tree string="Historical List Price">
                                    <field name="name"/>
                                    <field name="price"/>
                                    <field name="product_uom"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
