<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="res_groups_user" model="res.groups">
        <field name="name">User: Can generate commissions</field>
        <field name="category_id" ref="ir_module_category_icm"/>
    </record>

    <record id="res_groups_manager" model="res.groups">
        <field name="name">Manager: Can configure commissions</field>
        <field name="implied_ids" eval="[(4, ref('res_groups_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
        <field name="category_id" ref="ir_module_category_icm"/>
    </record>
</odoo>
