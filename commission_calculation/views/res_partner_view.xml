<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="res_partner_view_baremo" model="ir.ui.view">
        <field name="name">res.partner.view.baremo</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]//form/sheet/field[@name='customer']" position="after">
                <div class="oe_left" style="width: 100%;">
                    <div>
                        <label for="baremo_id"/>
                    </div>
                    <h3 style="width: 100%;">
                        <field
                            name="baremo_id"
                            widget="selection"
                            />
                    </h3>
                    <div>
                        <label for="user_id"/>
                    </div>
                    <h3 style="width: 100%;">
                        <field
                            name="user_id"
                            widget="selection"
                            />
                    </h3>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
