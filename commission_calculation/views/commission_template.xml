<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record model="ir.ui.view" id="commission_template_form">
        <field name="name">commission.template.form</field>
        <field name="model">commission.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title oe_left">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Template's name" />
                        </h1>
                    </div>
                    <group col="4" colspan="2">
                        <group col="2" colspan="2">
                            <field
                                name="commission_type"
                                widget="radio"
                                string="Based on"
                                required='1'
                                />
                            <field
                                name="policy_date_start"
                                widget="radio"
                                string='Computation begins on'
                                required='1'
                                />
                            <field
                                name="salesman_policy"
                                widget="radio"
                                string="Salespeople from"
                                required='1'
                                />
                        </group>
                        <group col="2" colspan="2">
                            <field
                                name="scope"
                                widget="radio"
                                string="Compute on"
                                required='1'
                                />
                            <field
                                name="policy_date_end"
                                widget="radio"
                                string='Computation ends on'
                                required='1'
                                />
                            <field
                                name="baremo_policy"
                                widget="radio"
                                string='Baremo from'
                                required='1'
                                />
                        </group>
                        <group col="2" colspan="4">
                            <label
                                for="baremo_id"
                                string="Baremo to be used if not Baremo set on Company:"
                                attrs="{'invisible':[('baremo_policy','!=','onCompany')]}"
                                colspan="2"
                                />
                            <label
                                for="baremo_id"
                                string="Baremo to be used if not Baremo set on Partner:"
                                attrs="{'invisible':[('baremo_policy','!=','onPartner')]}"
                                colspan="2"
                                />
                            <label
                                for="baremo_id"
                                string="Baremo to be used if not Baremo set on Commercial Entity:"
                                attrs="{'invisible':[('baremo_policy','!=','onAccountingPartner')]}"
                                colspan="2"
                                />
                            <label
                                for="baremo_id"
                                string="Baremo to be used if not policy set on Salespeople:"
                                attrs="{'invisible':[('baremo_policy','!=','onUser')]}"
                                colspan="2"
                                />
                            <label
                                for="baremo_id"
                                string="This baremo is the only one to be used on this Document:"
                                attrs="{'invisible':[('baremo_policy','!=','onCommission')]}"
                                colspan="2"
                                />
                            <label
                                for="baremo_id"
                                attrs="{'invisible':[('baremo_policy','!=','onMatrix')]}"
                                colspan="2"
                                />
                            <field colspan="2" name="baremo_id" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="commission_template_tree">
        <field name="name">commission.template.tree</field>
        <field name="model">commission.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="commission_template_act">
        <field name="name">Templates</field>
        <field name="res_model">commission.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
