<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="baremo_line_view_form" model="ir.ui.view">
        <field name="name">baremo.line.form</field>
        <field name="model">baremo.line</field>
        <field name="arch" type="xml">
            <form string="Commission Days &amp; Discounts">
                <sheet>
                    <group>
                        <group>
                            <field name="name" default_focus="1"
                                placeholder="Up to 30 days"/>
                            <field name="number" placeholder="30"/>
                        </group>
                    </group>
                    <group>
                        <group string="Commission by Discount" colspan="4">
                            <field name="disc_ids" nolabel="1" colspan="6">
                                <tree editable='top'>
                                    <field name="porc_disc"/>
                                    <field name="porc_com"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="baremo_line_view_tree">
        <field name="name">baremo.line.tree</field>
        <field name="model">baremo.line</field>
        <field name="arch" type="xml">
            <tree string="Commission Days &amp; Discounts">
                <field name="name"/>
                <field name="number"/>
                <field name="disc_ids"/>
            </tree>
        </field>
    </record>
</odoo>
