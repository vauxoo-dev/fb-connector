<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record model="ir.ui.view" id="view_baremo_book_form">
        <field name="name">baremo.book.form</field>
        <field name="model">baremo.book</field>
        <field name="arch" type="xml">
            <form string="Baremos">
                <sheet>
                    <div class="oe_button_box" name="buttons">
                        <button name="action_view_matrix"
                                string="Matrix Salesman vs Products"
                                type="object" class="oe_stat_button"
                                icon="fa-users"/>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" default_focus="1" placeholder="3% Commission at 30 days w/o Disc." />
                        </h1>
                    </div>
                    <group>
                        <field name="bar_ids" nolabel="1" colspan="6"/>
                    </group>
                    <p groups="base.group_no_one">For these Salesman &amp; Products
                        this Bareme will be used On Commission Payment this
                        bareme can be used with other options above.</p>
                    <group string='Bareme Matrix' groups="base.group_no_one">
                        <field name="matrix_ids" nolabel="1">
                            <tree editable='top'>
                                <field name="user_id"/>
                                <field name="product_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_baremo_book_tree">
        <field name="name">baremo.book.tree</field>
        <field name="model">baremo.book</field>
        <field name="arch" type="xml">
            <tree string="Baremes">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="baremo_book_action">
        <field name="name">Baremos</field>
        <field name="res_model">baremo.book</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_baremo_book_tree">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_baremo_book_tree"/>
        <field name="act_window_id" ref="baremo_book_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_baremo_book_form">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_baremo_book_form"/>
        <field name="act_window_id" ref="baremo_book_action"/>
    </record>
</odoo>
